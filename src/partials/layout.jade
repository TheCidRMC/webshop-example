doctype
html
	head
		title= name
		link(rel="stylesheet", href="./index.css")

		meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
		meta(charset="UTF-8")
	body
		header
			a.logo(href="/")
				if logo
					img(src=logo)
				else
					= name

			div.basket.empty.closed
				a(href="#", alt="Basket") Basket
					span.count 0

				div.popup

		main
			block main

		footer
			p= footer
			p
				a(href="mailto:#{email}", alt="Contact us by email")= email

				| &nbsp;â€¢&nbsp;

				a(href="/terms.html") Terms &amp; Conditions

			div.payment-methods
				img(src="images/visa.svg", alt="Visa")
				img(src="images/mastercard.svg", alt="MasterCard")

		script(src="https://sdk.paylike.io/2.js", defer)
		script(src="./index.js", defer)
